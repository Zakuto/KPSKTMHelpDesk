<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kpsktmhelpdesk">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme2">
        <activity android:name=".activity.TechnicianUpdateActivity" />
        <activity android:name=".activity.TechnicianLoginActivity" />
        <activity android:name=".activity.TechnicianActivity" />
        <activity android:name=".activity.SearchAndDeleteActivity" />
        <activity android:name=".activity.DataListActivity" />
        <activity android:name=".activity.ClientRegisterActivity" />
        <activity android:name=".activity.ClientLoginActivity" />
        <activity
            android:name=".activity.ClientActivity"
            android:parentActivityName=".activity.MainActivity" />
        <activity android:name=".activity.AboutPageActivity" />
        <activity
            android:name=".activity.MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.TestActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>