<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/bg_register"
    tools:context=".activity.SearchAndDeleteActivity">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Search Report"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:gravity="center_horizontal"/>
        <EditText
            android:layout_width="200dp"
            android:background="@color/white"
            android:layout_height="40dp"
            android:layout_marginTop="70dp"
            android:hint="Search by name"
            android:id="@+id/search_name" />
        <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Search"
            android:layout_marginTop="70dp"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:background="@drawable/rounded_button_primary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Applicant's ID:"
            android:layout_marginTop="170dp"
            android:id="@+id/textView2"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:id="@+id/applic_id"
            android:textColor="@color/white"
            android:layout_alignTop="@+id/textView2"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Applicant's Name:"
            android:id="@+id/textView3"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="25dp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:id="@+id/applic_name"
            android:layout_alignBottom="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Department:"
            android:id="@+id/textView4"
            android:layout_below="@+id/textView3"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="21dp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:id="@+id/department_"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignStart="@+id/applic_name"
android:layout_alignLeft="@+id/applic_name"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Position:"
            android:id="@+id/textView5"
            android:layout_below="@+id/textView4"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="21dp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:id="@+id/position_"
            android:layout_alignTop="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone No:"
            android:id="@+id/textView6"
            android:layout_below="@+id/textView5"
    android:layout_alignParentStart="true"
android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:id="@+id/phone_no_"
            android:layout_alignTop="@+id/textView6"
            android:layout_alignStart="@+id/position_"
android:layout_alignLeft="@+id/position_"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type of services:"
            android:id="@+id/textView7"
            android:layout_below="@+id/textView6"
    android:layout_alignParentStart="true"
android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/option_"
            android:text="TextView"
            android:layout_alignTop="@+id/textView7"
            android:layout_alignStart="@+id/position_"
android:layout_alignLeft="@+id/position_"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/status_"
            android:text="TextView"
            android:layout_alignTop="@+id/textView9"
            android:layout_alignStart="@+id/position_"
android:layout_alignLeft="@+id/position_"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date_"
            android:text="TextView"
            android:layout_alignTop="@+id/textView10"
            android:layout_alignStart="@+id/position_"
android:layout_alignLeft="@+id/position_"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/action_"
            android:text="TextView"
            android:layout_alignTop="@+id/textView11"
            android:layout_alignStart="@+id/position_"
android:layout_alignLeft="@+id/position_"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date_sub_"
            android:text="TextView"
            android:layout_alignTop="@+id/textView12"
            android:layout_alignStart="@+id/position_"
android:layout_alignLeft="@+id/position_"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/type_pc"
            android:text="TextView"
            android:layout_alignTop="@+id/textView13"
            android:layout_alignStart="@+id/position_"
android:layout_alignLeft="@+id/position_"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/model_"
            android:text="TextView"
            android:layout_alignTop="@+id/textView14"
            android:layout_alignStart="@+id/position_"
android:layout_alignLeft="@+id/position_"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/supplier_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/position_"
android:layout_alignLeft="@+id/position_"
            android:layout_alignTop="@+id/textView15"
            android:text="TextView"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/serial_no_"
            android:text="TextView"
            android:layout_alignTop="@+id/textView16"
            android:layout_alignStart="@+id/position_"
android:layout_alignLeft="@+id/position_"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prob_details"
            android:text="TextView"
            android:layout_alignTop="@+id/textView8"
            android:layout_alignStart="@+id/position_"
android:layout_alignLeft="@+id/position_"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Problem details:"
            android:id="@+id/textView8"
            android:layout_below="@+id/textView7"
    android:layout_alignParentStart="true"
android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status:"
            android:id="@+id/textView9"
            android:layout_below="@+id/textView8"
    android:layout_alignParentStart="true"
android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of report:"
            android:id="@+id/textView10"
            android:layout_below="@+id/textView9"
    android:layout_alignParentStart="true"
android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Action:"
            android:id="@+id/textView11"
            android:layout_below="@+id/textView10"
    android:layout_alignParentStart="true"
android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date Submitted:"
            android:id="@+id/textView12"
            android:layout_below="@+id/textView11"
    android:layout_alignParentStart="true"
android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type of PC (if any):"
            android:id="@+id/textView13"
            android:layout_below="@+id/textView12"
    android:layout_alignParentStart="true"
android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Model of PC (if any):"
            android:id="@+id/textView14"
            android:layout_below="@+id/textView13"
    android:layout_alignParentStart="true"
android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Supplier:"
            android:id="@+id/textView15"
            android:layout_below="@+id/textView14"
    android:layout_alignParentStart="true"
android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Serial no of devices:"
            android:id="@+id/textView16"
            android:layout_below="@+id/textView15"
    android:layout_alignParentStart="true"
android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textColor="@color/white"
            android:background="@drawable/rounded_button_primary"
            android:id="@+id/del_btn"
            android:layout_marginTop="750dp"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</ScrollView>
