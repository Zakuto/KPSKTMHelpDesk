<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kpsktmhelpdesk.activity.TechnicianUpdateActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="@color/bg_register">

        <EditText
            android:layout_width="200dp"
            android:background="@color/white"
            android:layout_height="40dp"
            android:layout_marginTop="70dp"
            android:hint="Search by name"
            android:id="@+id/search_name" />
        <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Search"
            android:layout_marginTop="70dp"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:background="@color/bg_button"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Technician Form"

            android:textColor="@color/white"
            android:textSize="30sp"
            android:gravity="center_horizontal"
            />
        android:layout_marginTop="340dp"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:id="@+id/dateSubmit"
            android:layout_marginTop="385dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:text="Technical Action:"
            android:layout_marginTop="125dp"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:background="@color/white"
            android:layout_marginTop="145dp"
            android:id="@+id/tech_action"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status:"
            android:textColor="@color/white"
            android:layout_marginTop="245dp"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:background="@color/white"
            android:layout_marginTop="265dp"
            android:id="@+id/status"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of submission (dd/mm/yy)"
            android:layout_marginTop="365dp"
            android:textColor="@color/white"
            android:id="@+id/textView7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Additional info:"
            android:layout_marginTop="415dp"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:id="@+id/typePc"
            android:layout_marginTop="435dp"
            android:padding="10dp"
            android:hint="Type of Hardware/PC"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:id="@+id/model"
            android:hint="Model"
            android:padding="10dp"
            android:layout_marginTop="495dp"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:id="@+id/supplier"
            android:layout_marginTop="555dp"
            android:hint="Supplier"
            android:padding="10dp"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:id="@+id/serial_no"
            android:layout_marginTop="615dp"
            android:hint="Serial no"
            android:padding="10dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/viewDtls"
            android:text="@string/update_btn"
            android:layout_marginTop="675dp"
            android:textColor="@color/white"
            android:background="@color/bg_button"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>